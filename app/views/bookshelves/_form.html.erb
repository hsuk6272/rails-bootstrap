<!-- look at github.com/plataformatec/simple_form -->
<%= simple_form_for(@bookshelf) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :title, label: 'Title', placeholder: 'Winnie-the-Pooh' %>
  	<br>
    <br>
    <%= f.label :author %>
    <br>
    <%= f.text_field :author %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add book", class: 'btn btn-primary btn-xs' %>
  </div>
<% end %>
